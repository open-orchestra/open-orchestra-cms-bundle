{
  "name": "open-orchestra/open-orchestra-cms-bundle",
  "description": "This bundle provide the Back Office part of Open Orchestra",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "OpenOrchestra community",
      "homepage": "https://github.com/open-orchestra/open-orchestra-cms-bundle/graphs/contributors"
    }
  ],

  "require": {
    "php": "~5.6.0",
    "braincrafted/bootstrap-bundle": "~2.1.2",
    "koala-framework/composer-extra-assets": "~2.0.4",
    "stfalcon/tinymce-bundle": "~0.3.8",
    "open-orchestra/open-orchestra-base-api-bundle": "1.2.*@dev",
    "open-orchestra/open-orchestra-base-bundle": "1.2.*@dev",
    "open-orchestra/open-orchestra-display-bundle": "1.2.*@dev",
    "open-orchestra/open-orchestra-model-interface": "1.2.*@dev",
    "open-orchestra/open-orchestra-user-bundle": "1.2.*@dev",

    "friendsofsymfony/user-bundle": "@dev",
    "innocead/captcha-bundle": "@dev",
    "open-orchestra/open-orchestra-bbcode-bundle": "@dev",
    "open-orchestra/open-orchestra-libs": "@dev",
    "open-orchestra/open-orchestra-mongo-libs": "@dev"
  },

  "require-dev": {
    "codeclimate/php-test-reporter": "~0.3.2",
    "phake/phake": "~2.1.0",
    "phpunit/phpunit": "~4.8.0",

    "sensio/generator-bundle": "~2.5.0",
    "open-orchestra/open-orchestra-model-bundle": "1.2.*@dev"
  },

  "config": {
    "bin-dir": "bin"
  },

  "autoload": {
    "psr-4": {
      "OpenOrchestra\\ModelLogBundle\\": "ModelLogBundle/",
      "OpenOrchestra\\LogBundle\\": "LogBundle/",
      "OpenOrchestra\\BackofficeBundle\\": "BackofficeBundle/",
      "OpenOrchestra\\Backoffice\\": "Backoffice/",
      "OpenOrchestra\\GroupBundle\\": "GroupBundle/",
      "OpenOrchestra\\ApiBundle\\": "ApiBundle/",
      "OpenOrchestra\\UserAdminBundle\\": "UserAdminBundle/"
    }
  },

  "extra": {
    "branch-alias": {
      "dev-master": "1.2.x-dev"
    },
    "mouf": {
      "nodejs": {
        "version": "~4.4.3"
      }
    },
    "require-npm": {
      "bower": "~1.7",
      "grunt": "~0.4",
      "grunt-cli": "~1.2",
      "grunt-contrib-symlink": "~1.0",
      "grunt-contrib-less": "~1.3.0",
      "grunt-contrib-cssmin": "~1.0",
      "grunt-contrib-coffee": "~1.0",
      "grunt-contrib-uglify": "~1.0",
      "grunt-contrib-concat": "~1.0",
      "grunt-contrib-watch": "~1.0",
      "grunt-contrib-clean": "~1.0",
      "grunt-js-test": "1.5.x",
      "grunt-commands": "~0.1",
      "coffee-script": "~1.10.0",
      "load-grunt-tasks": "~3.5.0",
      "glob": "~7.0.3",
      "merge": "~1.2.0"
    },
    "expose-npm-packages": true,
    "require-bower": {
      "datatables.net-buttons-bs": "1.1.0",
      "jquery": "~2.1.1",
      "jquery-tokeninput": "1.7.0",
      "jquery-ui": "~1.11.2",
      "bootstrap": "~3.3.4",
      "jquery-form": "3.51",
      "select2": "3.5.2",
      "font-awesome": "4.3.0",
      "open-sans": "v1.1.0",
      "backbone": "~1.2.3",
      "jquery-minicolors": "~2.2.3",
      "backbone.wreqr": "~1.3.5"
    }
  }
}
