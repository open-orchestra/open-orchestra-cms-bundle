                        <div class="widget-toolbar js-widget-panel" style="display: none"></div>
                        <div class="widget-toolbar js-widget-edit" style="display: none"></div>
                    </header>

                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <div>
                                <label>*Title:*</label>
                                <input type="text" />
                            </div>
                        </div>
                        <!-- end widget edit box -->

                        <div class="widget-body">
                            <!-- content goes here -->
</script>

<script type="text/html" id="footerInclude">
                            <!-- end content -->
                        </div>

                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>

        </div>

        <!-- end row -->

    </section>
    <!-- end widget grid -->
