<script type="text/html" id="widgetStatusView">
    <div class="widget-toolbar" id="widgetStatus">
        <!-- add: non-hidden - to disable auto hide -->

        <div class="btn-group">
            <button class="btn dropdown-toggle btn-xs btn-success" data-toggle="dropdown">
                Status <i class="fa fa-caret-down"></i>
            </button>
            <ul class="dropdown-menu pull-right js-status-update">
                <% if (statuses.length > 0 ) { %>
                    <% _.each(statuses, function(status) { %>
                        <% if (status.allowed) { %>
                            <li>
                                <a class="node-change-status"
                                    data-url="<%= status_change_link %>"
                                    data-status="<%= status.identifier %>"
                                >
                                    <i class="fa fa-circle txt-color-<%= status.display_color %>"></i> 
                                <%= status.label %></a></li>
                        <% } else { %>
                            <li class="status-disabled"><i class="fa fa-circle txt-color-disabled"></i> <%= status.label %></li>
                        <% } %>
                    <% }); %>
                <% } else { %>
                    <li class="status-disabled">No status available</li>
                <% } %>
            </ul>
        </div>
    </div>
</script>

<script type="text/html" id="nodeTitle">
    <span rel="tooltip" data-placement="top" data-original-title="
    {{ 'php_orchestra_backoffice.node.last_update.at'| trans }}
    <%= node.get('updated_at') %>
    {{ 'php_orchestra_backoffice.node.last_update.by'| trans }}
    <% if (node.get('updated_by') !== undefined ) { %>
        <%= node.get('updated_by') %>
    <% } else { %>
        anonymous
    <% } %>
    ">
        <b class="page_status_title <% if(node.get('status').label == "{{ 'php_orchestra_backoffice.form.status.published'| trans }}") { %> alert-danger <%}%>" style="display:inline-block;padding:0 3px;line-height:22px;"><%= node.get('status').label %></b>
        <%= node.get('name') %>
        ({{ 'php_orchestra_backoffice.node.version.display' | trans }} : #<%= node.get('version') %>)
    </span>
</script>

<script type="text/html" id="nodeChoice">
    <option class="version-select-<%= cid %>" value="<%= node.get('version') %>" <% if (node.get('version') == version) { %>selected="selected"<% } %>>
        <b class="page_status_title"><%= node.get('status').label %></b>
        <%= node.get('name') %>
        ({{ 'php_orchestra_backoffice.node.version.display' | trans }} : #<%= node.get('version') %>)
    </option>
</script>

<script type="text/html" id="nodeLanguage">
    <li <% if (currentLanguage == language) { %>class="active"<% } %>>
        <a class="change-language" data-language="<%= language %>">
            <%= language %>
        </a>
    </li>
</script>

