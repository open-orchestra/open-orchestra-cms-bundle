<script type="text/html" id="headInclude">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i id="title-logo" />
                <span id="title-universe" />
                <span id="title-functionnality"/>
