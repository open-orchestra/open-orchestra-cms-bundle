{% include 'PHPOrchestraBackofficeBundle:BackOffice:Underscore/Jarvis/header._tpl.twig' %}

<ul id="entity-languages" class="nav nav-tabs">
</ul>
<div id="preview"></div>
<% if (node.get('node_type') == 'page') { %>
    <a class="btn btn-info btn-new-version btn-new-version-<%= cid %>" target="_blank">
        <i class="glyphicon glyphicon-pencil"></i>
        {{ ('php_orchestra_backoffice.node.version.create') | trans({}, 'messages', language) }}
    </a>
<% } %>
<div id="additionalContent" class="smart-form">
    <% if (node.get('node_type') == 'page') { %>
        <label class="select">
            <select id="version-selectbox" class="version-selectbox-<%= cid %>"/>
            <i></i>
        </label>
    <% } %>
</div>
<div class="hidden-info" id="generated-title">
    <%= title %>
</div>
<div class="hidden-info" id="generated-panel">
    <div class="header">
        <i class="fa fa-arrow-circle-left"></i>
        <h2>{{ ('php_orchestra_backoffice.node.blocks') | trans({}, 'messages', language) }}</h2>
    </div>
    <div class="ui-model scroll panel-shadow">
        <ul class="ui-model-blocks rigth-panel-blocks">
            {{ render(controller('PHPOrchestraBackofficeBundle:Block:listPossibleBlocks')) }}
        </ul>
    </div>
</div>
<span class="delete-confirm-txt-<%= cid %> hidden-info">{{ 'php_orchestra_backoffice.node.delete.text'|trans }}</span>
<span class="delete-confirm-title-<%= cid %> hidden-info">{{ 'php_orchestra_backoffice.node.delete.title'|trans }}</span>
<div role="container">
    <div class="ui-model">
        <div class="toolbar">
            <i class="fa fa-eye-slash hide-areas"></i><i class="fa fa-eye show-areas"></i>
        </div>
        <ul class="ui-model-areas">
        </ul>
    </div>
</div>

{% include 'PHPOrchestraBackofficeBundle:BackOffice:Underscore/Jarvis/footer._tpl.twig' %}
