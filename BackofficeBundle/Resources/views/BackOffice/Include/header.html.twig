<!-- HEADER -->
<header id="header">
    <div id="logo-group">

        <!-- PLACE YOUR LOGO HERE -->
        <span id="logo"> <img src="{{ asset('bundles/phporchestracms/img/logo-orchestra.png') }}" alt="PHP Ochestra"> </span>
        <!-- END LOGO PLACEHOLDER -->

        <!-- Note: The activity badge color changes when clicked and resets the number to 0
        Suggestion: You may want to set a flag when this happens to tick off all checked messages / notifications -->
        <span id="activity" class="activity-dropdown"> <i class="fa fa-user"></i> <b class="badge"> 21 </b> </span>

        <!-- AJAX-DROPDOWN : control this dropdown height, look and feel from the LESS variable file -->
        <div class="ajax-dropdown">

            <!-- the ID links are fetched via AJAX to the ajax container "ajax-notifications" -->
            <div class="btn-group btn-group-justified" data-toggle="buttons">
                <label class="btn btn-default">
                    <input type="radio" name="activity" id="ajax/notify/mail.html">
                    *Msgs* (14) </label>
                <label class="btn btn-default">
                    <input type="radio" name="activity" id="ajax/notify/notifications.html">
                    *notify* (3) </label>
                <label class="btn btn-default">
                    <input type="radio" name="activity" id="ajax/notify/tasks.html">
                    *Tasks* (4) </label>
            </div>

            <!-- notification content -->
            <div class="ajax-notifications custom-scroll">

                <div class="alert alert-transparent">
                    <h4>*Click a button to show messages here*</h4>
                    *This blank page message helps protect your privacy, or you can show the first message here automatically.*
                </div>

                <i class="fa fa-lock fa-4x fa-border"></i>

            </div>
            <!-- end notification content -->

            <!-- footer: refresh area -->
            <span> *Last updated on: 12/12/2013 9:43AM*
                <button type="button" data-loading-text="<i class='fa fa-refresh fa-spin'></i> *Loading...*" class="btn btn-xs btn-default pull-right">
                    <i class="fa fa-refresh"></i>
                </button> </span>
            <!-- end footer -->

        </div>
        <!-- END AJAX-DROPDOWN -->
    </div>

    <!-- projects dropdown -->
    <div id="project-context">

        {% set availableSites = context.getAvailableSites() %}
        <span class="label">{{ 'php_orchestra_cms.top_menu.site'|trans({}, 'backOffice') }}</span>
        <span id="project-selector" class="popover-trigger-element dropdown-toggle" data-toggle="dropdown"><b>{{ context.getCurrentSite().domain }}</b> <i class="fa fa-angle-down"></i></span>

        <!-- Suggestion: populate this list with fetch and push technique -->
        <ul class="dropdown-menu">
            {% for site in availableSites %}
            <li{% if context.getCurrentSite().siteId == site.siteId %} class="active"{% endif %}>
                <a href="javascript:callAndReload('{{ path('php_orchestra_api_context_site', {'siteId':site.siteId, 'siteDomain':site.domain}) }}');">{{ site.domain }}</a>
            </li>
            {% endfor %}
        </ul>
        <!-- end dropdown-menu-->

    </div>
    <!-- end projects dropdown -->

    <!-- pulled right: nav area -->
    <div class="pull-right">

        <!-- collapse menu button -->
        <div id="hide-menu" class="btn-header pull-right">
            <span> <a href="javascript:void(0);" title="{{ 'php_orchestra_cms.top_menu.collapse_menu'|trans({}, 'backOffice') }}"><i class="fa fa-reorder"></i></a> </span>
        </div>
        <!-- end collapse menu -->

        <!-- logout button -->
        <div id="logout" class="btn-header transparent pull-right">
            <span> <a href="{{ url('fos_user_security_logout') }}" title="{{ 'php_orchestra_cms.top_menu.sign_out'|trans({}, 'backOffice') }}" data-logout-msg="{{ 'php_orchestra_cms.top_menu.improve_security'|trans({}, 'backOffice') }}"><i class="fa fa-sign-out"></i></a> </span>
        </div>
        <!-- end logout button -->

        <!-- search mobile button (this is hidden till mobile view port) -->
        <div id="search-mobile" class="btn-header transparent pull-right">
            <span> <a href="javascript:void(0)" title="*Search*"><i class="fa fa-search"></i></a> </span>
        </div>
        <!-- end search mobile button -->

        <!-- input: search field -->
        <form action="#" class="header-search pull-right">
            <input type="text" name="param" placeholder="*Rechercher*" id="search-fld">
            <button type="submit">
                <i class="fa fa-search"></i>
            </button>
            <a href="javascript:void(0);" id="cancel-search-js" title="Annuler"><i class="fa fa-times"></i></a>
        </form>
        <!-- end input: search field -->

        <!-- fullscreen button -->
        <div id="fullscreen" class="btn-header transparent pull-right">
            <span> <a href="javascript:void(0);" onclick="launchFullscreen(document.documentElement);" title="{{ 'php_orchestra_cms.top_menu.fullscreen'|trans({}, 'backOffice') }}"><i class="fa fa-fullscreen"></i></a> </span>
        </div>
        <!-- end fullscreen button -->

        <!-- multiple lang dropdown : find all flags in the image folder -->
        <ul class="header-dropdown-list hidden-xs">
            <li>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <img
                        alt="{{ 'php_orchestra_cms.top_menu.language_flag_%language%'|trans({'language':context.currentLocale}, 'backOffice') }}"
                        src="{{ asset('bundles/phporchestracms/img/flags/' ~ context.currentLocale ~ '.png') }}"
                        >
                    <span> {{ context.currentLocale|upper }} </span> <i class="fa fa-angle-down"></i>
                </a>
                <ul class="dropdown-menu pull-right">
                    {% for language in available_languages %}
                    <li{% if context.currentLocale == language %} class="active"{% endif %}>
                        <a href="javascript:callAndReload('{{ path('php_orchestra_api_context_language', {'language':language}) }}');">
                            <img
                                    alt="{{ 'php_orchestra_cms.top_menu.language_flag_%language%'|trans({'language':language}, 'backOffice') }}"
                                    src="{{ asset('bundles/phporchestracms/img/flags/' ~ language ~ '.png') }}">
                            {{ ('php_orchestra_backoffice.language.' ~ language)|trans }}
                        </a>
                    </li>
                    {% endfor %}
                </ul>
            </li>
        </ul>
        <!-- end multiple lang -->

    </div>
    <!-- end pulled right: nav area -->

</header>
<!-- END HEADER -->
